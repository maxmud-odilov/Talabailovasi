@model List<TalabaIlova.Models.Talaba>

@{
    ViewData["Title"] = "Talabalar ro'yxati";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="fw-bold text-dark">📋 Talabalar ro'yxati</h2>
    <a class="btn btn-success" asp-action="Yaratish">+ Yangi Talaba</a>
</div>

@if (Model != null && Model.Count > 0)
{
    <table class="table table-bordered table-striped shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>#</th>
                <th>Ism</th>
                <th>Familiya</th>
                <th>Yosh</th>
                <th>Amallar</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var talaba in Model)
            {
                <tr>
                    <td>@talaba.Id</td>
                    <td>@talaba.Ism</td>
                    <td>@talaba.Familiya</td>
                    <td>@talaba.Yosh</td>
                    <td>
                        <a class="btn btn-primary btn-sm" asp-action="Tahrirlash" asp-route-id="@talaba.Id">✏️</a>
                        <a class="btn btn-danger btn-sm" asp-action="Ochir" asp-route-id="@talaba.Id">🗑️</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info">Hech qanday talaba mavjud emas.</div>
}
